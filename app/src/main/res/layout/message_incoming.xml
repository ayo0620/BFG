<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rlIncoming"
    android:paddingVertical="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="60dp"
    android:clipToPadding="false">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivChatProfileImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/default_profile_icon"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="5dp"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/otherUserMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/incoming_bubble"
        android:padding="20dp"
        android:layout_toEndOf="@+id/ivChatProfileImage"
        android:text="This is other users"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/otherUserTimeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/otherUserMsg"
        android:text="10-08-2021 08:12 PM"
        android:textSize="10sp" />

</RelativeLayout>