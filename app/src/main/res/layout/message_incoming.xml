<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rlIncoming"
    android:paddingVertical="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="60dp"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/otherUserMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/incoming_bubble"
        android:padding="20dp"
        android:text="This is other users"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/otherUserTimeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/otherUserMsg"
        android:text="10-08-2021 08:12 PM"
        android:textSize="10sp" />

</RelativeLayout>